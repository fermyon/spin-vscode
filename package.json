{
    "name": "spin-vscode",
    "publisher": "fermyon",
    "displayName": "Spin",
    "description": "Build and test Spin components from within VS Code",
    "icon": "images/spin-icon.png",
    "version": "0.3.1",
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/fermyon/spin-vscode"
    },
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:spin.addToTerminalPath",
        "onCommand:spin.deploy",
        "onCommand:spin.connect",
        "onCommand:spin.openDashboard",
        "onTaskType:spin"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "category": "Spin",
                "command": "spin.addToTerminalPath",
                "title": "Add to Terminal Path"
            },
            {
                "category": "Spin",
                "command": "spin.deploy",
                "title": "Deploy"
            },
            {
                "category": "Spin",
                "command": "spin.connect",
                "title": "Choose Deployment Environment"
            },
            {
                "category": "Spin",
                "command": "spin.openDashboard",
                "title": "Open Dashboard"
            }
        ],
        "configuration": {
            "title": "Spin",
            "properties": {
                "spin.customProgramPath": {
                    "type": "string",
                    "description": "Path of a Spin binary to use instead of the auto-installed binary"
                },
                "spin.environments": {
                    "type": "array",
                    "items": {
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name by which this environment is identified in the user interface"
                            },
                            "bindleUrl": {
                                "type": "string",
                                "description": "The URL of the Bindle server"
                            },
                            "hippoUrl": {
                                "type": "string",
                                "description": "The URL of the Hippo server"
                            },
                            "hippoUsername": {
                                "type": "string",
                                "description": "The user name for logging into the Hippo server (note: password is held separately in the secret store)"
                            }
                        }
                    },
                    "description": "The known deployment environments"
                },
                "spin.activeEnvironment": {
                    "type": "string",
                    "description": "The currently active deployment environment"
                }
            }
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "spin.openDashboard",
                    "when": "spin.connected"
                }
            ]
        },
        "taskDefinitions": [
            {
                "type": "spin",
                "when": "shellExecutionSupported",
                "required": ["command"],
                "properties": {
                    "command": {
                        "type": "string",
                        "description": "The Spin command to execute"
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Options to pass on the Spin command line"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mkdirp": "^1.0.2",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/shelljs": "^0.8.11",
        "@types/tar": "^6.1.1",
        "@types/tmp": "^0.2.3",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4",
        "ts-loader": "^9.2.6",
        "webpack": "^5.66.0",
        "webpack-cli": "^4.9.1"
    },
    "dependencies": {
        "extract-zip": "^2.0.1",
        "got": "^11.8.3",
        "mkdirp": "^1.0.4",
        "rxjs": "^7.5.5",
        "shelljs": "^0.8.5",
        "spawn-rx": "^3.0.0",
        "tar": "^6.1.11",
        "tmp": "^0.2.1"
    }
}
